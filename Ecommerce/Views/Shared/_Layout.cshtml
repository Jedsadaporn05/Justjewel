    <script>
        // Function get shoppingCart => this function should allow to read the shopping cart from cookie
        function getShoppingCart() { 
            // Document.cookie contains all the cookies of our website with the following format
            // cookie1=value1; cookie2=value2; cookie3=value3;

            const cookieName = "shopping_cart";
            let cookiesArray = document.cookie.split(';');

            for (let i = 0; i < cookiesArray.length; i++) {
                let cookie = cookiesArray[i];
                if (cookie.includes(cookieName)) {
                    let cookie_value = cookie.substring(cookie.indexOf("=") + 1);
                    
                    try {
                        let cart = JSON.parse(atob(cookie_value));
                        return cart;
                    }
                    catch (exception) {
                        break;
                    }
                }
            }
            // Return an empty object
            return {};
        }

        // Function to allow us to store the shopping cart into a cookie.
        function saveCart(cart) {
            let cartStr = btoa(JSON.stringify(cart)) // Convert cart into string
            console.log(cartStr);
            // Save this shopping cart into a cookie
            let d = new Date(); // Create a new Date object with the current date and time
            d.setDate(d.getDate() + 365);
            let expires = d.toUTCString();
            document.cookie = "shopping_cart=" + cartStr + ";expires=" + expires + ";path=/; SameSite=Strict; Secure"
        }

        function addToCart(button, id, redirectToCart = false) {

            let cart = getShoppingCart();

            let quantityInput = document.getElementById("quantity");
            let quantityToAdd = quantityInput ? parseInt(quantityInput.value) || 1 : 1;


            let quantity = cart[id];
            if (isNaN(quantity)) {
                cart[id] = quantityToAdd;
            } else {
                cart[id] = quantity + quantityToAdd;
            }

            saveCart(cart);
            location.reload()
            button.innerHTML = "Added <i class='bi bi-check-lg'></i>";

            let cartSize = 0;
            for (let cartItem of Object.values(cart)) {
                cartSize += Number(cartItem);
            }

            document.getElementById("CartSize").innerHTML = cartSize
            document.getElementById("CartSizeSidebar").innerHTML = cartSize;

            if (quantityInput) {
                quantityInput.value = 1;
            }

            if (redirectToCart) {
                window.location.href = "/Cart";
            }

        }

        function increase(id) {
            let cart = getShoppingCart();

            let quantity = cart[id]
            if (isNaN(quantity)) {
                // quantity is Not a Number => set it to 1
                cart[id] = 1
            }
            else {
                cart[id] = Number(quantity) + 1;
            }

            saveCart(cart);
            location.reload()
        }

        function decrease(id) {
            let cart = getShoppingCart();

            let quantity = cart[id]
            if (isNaN(quantity)) {
                // quantity is Not a Number => exit
                return
            }

            quantity = Number(quantity)

            if (quantity > 1) {
                cart[id] = quantity - 1
                saveCart(cart)
                location.reload()
            }
        }

        function remove(id) {
            let cart = getShoppingCart();

            if (cart[id]) {
                delete cart[id]
                saveCart(cart)
                location.reload()
            }
        }

        document.addEventListener("DOMContentLoaded", () => {
            let lastScrollTop = 0;
            const navbar = document.getElementById("navbar");

            window.addEventListener("scroll", () => {
                const scrollTop = window.pageYOffset || document.documentElement.scrollTop;

                if (scrollTop > lastScrollTop) {
                    // เมื่อเลื่อนลง -> ซ่อน Navbar
                    navbar.classList.add("hidden");
                } else {
                    // เมื่อเลื่อนขึ้น -> แสดง Navbar
                    navbar.classList.remove("hidden");
                }

                lastScrollTop = scrollTop; // อัพเดตค่าการเลื่อนล่าสุด
            });
        });

    </script>
