        <!-- Back to Top Button HTML -->
        <button id="backToTopBtn" title="Go to top" class="mx-auto my-auto" style="font-size:20px;">
            <i class="bi bi-arrow-up"></i>
        </button>

        <script>
            const backToTopBtn = document.getElementById("backToTopBtn");

            // เมื่อมีการเลื่อนหน้าจอลงมา ให้แสดงปุ่ม
            window.onscroll = function () {
                if (document.body.scrollTop > 100 || document.documentElement.scrollTop > 100) {
                    backToTopBtn.style.display = "block";
                    backToTopBtn.style.opacity = 1;
                } else {
                    backToTopBtn.style.opacity = 0;
                    setTimeout(() => {
                        backToTopBtn.style.display = "none";
                    }, 300);
                }
            };

            // เมื่อกดปุ่ม จะทำให้เลื่อนขึ้นไปข้างบนแบบค่อยๆ
            backToTopBtn.onclick = function () {
                scrollToTop();
            };

            // ฟังก์ชันสำหรับเลื่อนกลับไปข้างบนแบบสมูท
            function scrollToTop() {
                const currentPosition = document.documentElement.scrollTop || document.body.scrollTop;
                if (currentPosition > 0) {
                    window.requestAnimationFrame(scrollToTop); // เรียกใช้ requestAnimationFrame เพื่อให้การเลื่อนเป็นขั้นตอน
                    window.scrollTo(0, currentPosition - currentPosition / 8); // ค่อยๆ ลดตำแหน่ง scroll
                }
            }
        </script>
