@model PasswordDto
@{
}

<style>
    html, body {
        overflow-x: hidden;
    }

    ::selection {
        color: white;
        background-color: black;
    }

    body {
        height: 100%;
        margin: 0;
        justify-content: center;
        align-items: center;
        background-color: #f9f9f9;
    }

    .profile-container {
        max-width: 550px;
        margin-top: 200px;
        margin-bottom: 220px;
        padding: 70px;
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-container {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .btn-submit {
        background-color: white;
        color: black;
        padding: 12px 20px;
        border: none;
        border-radius: 0;
        flex: 1;
        text-align: center;
        border-radius: 25px;
        transition: background-color 0.3s ease, transform 0.2s;
    }

    .btn-submit:hover {
        background-color: black;
        color: white;
        transform: translateY(-2px);
    }

    a.btn-submit {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
    }

    input.form-control {
        border: 1px solid #ccc;
        border-radius: 8px;
        transition: border-color 0.3s ease, border-radius 0.3s ease;
    }

    input.form-control:focus {
        outline: none;
        border-color: black;
        box-shadow: none;
    }

    .form-floating {
        position: relative;
    }

    .form-floating label {
        padding-left: 10px;
        color: #666;
        transition: all 0.3s ease;
        position: absolute;
    }

    .form-control:not(:placeholder-shown) + label,
    .form-control:focus + label {
        top: -1px;
        left: 2px;
        font-size: 0.9rem;
        color: black;
    }

</style>

<div class="container profile-container">
    <h2 class="text-center mb-4">Edit Password</h2>

    <form method="post">
        <div class="form-floating mb-4">
            <input class="form-control" type="password" asp-for="CurrentPassword" placeholder=" " />
            <label class="form-label">Current Password</label>
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>

        <div class="form-floating mb-4">
            <input class="form-control" type="password" asp-for="NewPassword" placeholder=" " />
            <label class="form-label">New Password</label>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="form-floating mb-4">
            <input class="form-control" type="password" asp-for="ConfirmPassword" placeholder=" " />
            <label class="form-label">Confirm Password</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@ViewBag.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@ViewBag.SuccessMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="btn-container mt-4">
            <button type="submit" class="btn-submit border border-dark w-100">Save Changes</button>
            <a class="btn-submit border border-dark w-100" asp-controller="Account" asp-action="Profile">Cancel</a>
        </div>
    </form>
</div>
