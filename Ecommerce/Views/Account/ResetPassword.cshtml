@model PasswordResetDto
@{
}

<style>
    html, body {
        overflow-x: hidden;
    }

    ::selection {
        color: white;
        background-color: black;
    }

    body {
        background-color: #f9f9f9;
    }

    .profile-container {
        max-width: 600px;
        margin-top: 190px;
        margin-bottom: 200px;
        padding: 80px;
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-container {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    .btn-submit {
        background-color: white;
        color: black;
        padding: 12px 20px;
        border: none;
        border-radius: 25px;
        flex: 1;
        text-align: center;
        font-size: 16px;
        transition: background-color 0.3s ease, transform 0.2s;
    }

    .btn-submit:hover {
        background-color: black;
        color: white;
        ransform: translateY(-2px);
    }

    .btn-submit:active {
        transform: scale(0.99);
        outline: none;
        box-shadow: none;
        transform: scale(0.98);
    }

    a.btn-submit {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
    }

    input.form-control {
        border: 1px solid #ccc;
        border-radius: 8px;
        transition: border-color 0.3s ease, border-radius 0.3s ease;
    }

    input.form-control:focus {
        outline: none;
        border-color: black;
        box-shadow: none;
    }

    /* Floating label style */
    .form-floating {
        position: relative;
    }

    .form-floating label {
        padding-left: 10px;
        color: #666;
        transition: all 0.3s ease;
        position: absolute;
    }

    .form-control:not(:placeholder-shown) + label,
    .form-control:focus + label {
        top: -1px;
        left: 2px;
        font-size: 0.9rem;
        color: black;
    }

</style>

<div class="container profile-container">
    <h2 class="text-center mb-4">Reset Password</h2>

    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <form method="post">
        <div class="form-floating mb-4">
            <input asp-for="Email" class="form-control" placeholder=" " />
            <label asp-for="Email" class="form-label">Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating mb-4">
            <input asp-for="Password" type="password" class="form-control" placeholder=" " />
            <label asp-for="Password" class="form-label">New Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-floating mb-4">
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder=" " />
            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@ViewBag.ErrorMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        else if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@ViewBag.SuccessMessage</strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="btn-container mt-4">
            <button type="submit" class="btn-submit border border-dark w-100">Submit</button>
            <a class="btn-submit border border-dark w-100" asp-controller="Account" asp-action="Login">Cancel</a>
        </div>
    </form>
</div>
