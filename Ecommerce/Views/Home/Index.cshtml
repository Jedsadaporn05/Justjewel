<style>
    html, body {
        overflow-x: hidden;
    }

    ::selection {
        color: white;
        background-color: black;
    }

    .card-img-top {
        transition: transform 0.3s ease;
    }

    .card-img-top:hover {
        transform: scale(1.1);
    }

    .body {
        background-color: white;
    }

    .carousel-indicators [data-bs-target] {
        background-color: #dfd6d1;
        width: 12px;
        height: 12px;
        border-radius: 50%; 
        border: none;
        transition: background-color 0.3s ease, transform 0.3s ease; /* เพิ่ม transition */
    }

    .carousel-indicators .active {
        background-color: black;
        transform: scale(1.3); /* ขยายขนาดเมื่อ active */
    }

    .overlay {
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        opacity: 0;
        transition: opacity 0.3s ease;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .position-relative:hover .overlay {
        opacity: 1;
    }

    .tooltip-text {
        display: none;
        position: absolute;
        top: 50%;
        right: 110%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.8);
        color: #fff;
        padding: 5px 10px;
        border-radius: 4px;
        white-space: nowrap;
        z-index: 10;
    }

    .btn:hover + .tooltip-text {
        display: block;
    }

    .py-6 {
        padding-top: 4rem;
    }

    .herO {
        height: 650px;
        position: relative;
        color: #fff;
        text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.7);
        background-size: cover;
    }

    .Hero {
        display: block;
        height: 650px;
        color: #fff;
        text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.7);
        background-size: cover;
    }

    /* เพิ่ม Overlay */
    .herO::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.3); /* ปรับความเข้ม */
            z-index: 1;
    }

    /* ข้อความอยู่เหนือ Overlay */
    .herO .container {
            position: relative;
            z-index: 2;
    }

    /* เพิ่มการ Fade Animation ให้เฉพาะ #heroCarousel */
    #heroCarousel .carousel-item {
        opacity: 0;
        transition: opacity 0.3s ease-in-out; /* การ Fade-in/Fade-out */
    }

    #heroCarousel .carousel-item.active {
        opacity: 1; /* แสดงภาพที่กำลัง Active */
        transition: opacity 0.3s ease-in-out; /* ใช้ Transition เดียวกัน */
    }

    /* ปรับแต่งให้ Best Sellers Carousel ใช้การสไลด์ */
    #carouselExampleControls .carousel-inner {
        display: flex;
        overflow: hidden; /* ซ่อนส่วนที่อยู่นอกเหนือจากขอบ */
        position: relative;
    }

    /* เพิ่มการ Fade Animation ให้เฉพาะ #heroCarousel */
    #heroCarousel2 .carousel-item {
        opacity: 0;
        transition: opacity 0.3s ease-in-out; /* การ Fade-in/Fade-out */
